import random

def roulette_six_line_game():
    """
    Eine einfache Roulette-Simulation, die eine Wette auf 6 Zahlen (Six Line) unterstÃ¼tzt.
    Die Six Line Wette wird auf zwei benachbarte Reihen von 3 Zahlen platziert.
    Beispiel: Die Zahlen 1, 2, 3, 4, 5, 6
    """
    # 37 Zahlen im EuropÃ¤ischen Roulette: 0 bis 36
    roulette_numbers = list(range(37))
    
    print("Willkommen beim Roulette (Six Line Version)!")
    
    # VerfÃ¼gbare Six Line Wettgruppen (Doppelreihen):
    # Jede Liste reprÃ¤sentiert die 6 Zahlen einer mÃ¶glichen Six Line Wette.
    six_line_groups = [
        [1, 2, 3, 4, 5, 6], [4, 5, 6, 7, 8, 9], [7, 8, 9, 10, 11, 12],
        [10, 11, 12, 13, 14, 15], [13, 14, 15, 16, 17, 18], [16, 17, 18, 19, 20, 21],
        [19, 20, 21, 22, 23, 24], [22, 23, 24, 25, 26, 27], [25, 26, 27, 28, 29, 30],
        [28, 29, 30, 31, 32, 33], [31, 32, 33, 34, 35, 36]
    ]

    # Der Einfachheit halber wÃ¤hlen wir die erste Six Line (1-6) als Beispielwette.
    # FÃ¼r eine komplexere Version mÃ¼sste der Benutzer seine Gruppe auswÃ¤hlen.
    bet_group_index = 0
    six_line_bet = six_line_groups[bet_group_index]
    
    print(f"\nSie wetten automatisch auf die Six Line: **{six_line_bet}**")
    
    # Einsatz abfragen
    while True:
        try:
            wager = int(input("Geben Sie Ihren Einsatz ein (Ganzzahl): "))
            if wager > 0:
                break
            else:
                print("Der Einsatz muss positiv sein.")
        except ValueError:
            print("UngÃ¼ltige Eingabe. Bitte geben Sie eine Zahl ein.")
            
    print("\nDer Kessel dreht sich...")
    
    # ZufÃ¤llige Zahl ziehen (0 bis 36)
    winning_number = random.choice(roulette_numbers)
    
    print(f"**Die Gewinnzahl ist: {winning_number}**")
    
    # Ergebnis prÃ¼fen
    if winning_number in six_line_bet:
        # Gewinn: Auszahlung ist 5:1 (5 * Einsatz + Einsatz zurÃ¼ck)
        payout = wager * 5
        total_win = wager + payout
        print(f"\nğŸ¥³ Herzlichen GlÃ¼ckwunsch! Die Zahl {winning_number} ist Teil Ihrer Wette.")
        print(f"Gewinn (5:1 Auszahlung): {payout} Chips.")
        print(f"Gesamtgewinn (Einsatz + Auszahlung): {total_win} Chips.")
    else:
        # Verlust
        print(f"\nğŸ˜­ Leider verloren. Die Zahl {winning_number} ist nicht in Ihrer Six Line.")
        print(f"Sie verlieren Ihren Einsatz von {wager} Chips.")

# Spiel starten
